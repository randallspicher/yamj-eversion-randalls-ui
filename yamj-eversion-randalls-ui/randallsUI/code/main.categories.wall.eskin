<?xml version="1.0" encoding="UTF-8"?>

<eskin>

<control>
<fullscreen>true</fullscreen>
<clearhighresbg>false</clearhighresbg>
</control>

	<!-- Background -->

<background>
<file>[:@media:]common/main.categories.background.2.png</file>
</background>

	<!-- Categories Wall Background -->

<image>
<name>categories.background</name>
<file>[:@media:]background/main.categories.wall.png</file>
<posx>13</posx>
<posy>13</posy>
<width>1254</width>
<height>658</height>  
</image>

<segment>

	<!-- Thumbnail Start Location -->

<name>index</name>
<hyperscroll>false</hyperscroll>
<startx>18</startx>
<starty>15</starty>
<endx>1280</endx>
<endy>665</endy>
<scroll>2</scroll>

	<!-- Cursor Size -->

<cursor>
<file>[:@media:]common/cursor/cursor_refl[:#cursor.refl:].950.950.20.20.[:#cursor.color:].[:#cursor.shiny:].swf</file>
<above>true</above>
<animate>true</animate>
<posx>-3</posx>
<posy>10</posy>
<width>144</width>
<height>212</height>
<scroll>2</scroll>
</cursor>

<tile>

	<!-- Columns and Rows -->

<cols>8</cols>		
<rows>3</rows>
<width>158</width>
<height>215</height>

	<!-- Text Location -->

<text>
<name>txtMenu</name>
<display>[:title:]</display>
<posx>4</posx>
<posy>178</posy>
<width>133</width>
<height>45</height>
<size>17</size>
<wordwrap>true</wordwrap>
<align>center</align>
<bold>true</bold>
<color>home.name.color</color>
<hlcolor>home.name.hlcolor</hlcolor>
</text>	

