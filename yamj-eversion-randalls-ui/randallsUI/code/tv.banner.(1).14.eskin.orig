<?xml version="1.0" encoding="UTF-8"?>

<eskin>

<control>
<fullscreen>true</fullscreen>
</control>

<include>tech.background.info</include>	

	<!-- Background -->

<background>
<file>[:@media:]common/tech.background.info.png</file>
</background>

	<!-- TV Banner 14 Background -->

<image>
<name>tv.banner.14.background</name>
<file>[:@media:]background/tv.banner.(1).14.png</file>
<posx>13</posx>
<posy>13</posy>
<width>1254</width>
<height>623</height>  
</image>

	<!-- Details Bar 1 - Top Left -->

<image>
<name>details.bar1</name>
<segname>index</segname>
<hyper>3</hyper>
<file>[:@media:]common/tv.banner.(1).14.outline1.png</file>
<posx>25</posx>
<posy>50</posy>
<width>390</width>
<height>550</height>  
</image>

	<!-- Details Bar 2 - Top Right -->

<image>
<name>details.bar2</name>
<segname>index</segname>
<hyper>3</hyper>
<file>[:@media:]common/tv.banner.(1).14.outline2.png</file>
<posx>425</posx>
<posy>25</posy>
<width>830</width>
<height>600</height>  
</image>

	<!-- Poster -->

<image>
<name>poster</name>
<segname>index</segname>
<hyper>3</hyper>
<file>[:@jukebox:][:smartposter1large:]</file>
<swap>true</swap>
<posx>45</posx>
<posy>75</posy>
<width>348</width>
<height>500</height>
</image>	

<segment>

	<!-- Thumbnail Start Location -->

<name>index</name>
<hyperscroll>false</hyperscroll>
<startx>440</startx>
<starty>30</starty>
<endx>1260</endx>
<endy>620</endy>
<scroll>2</scroll>

	<!-- Cursor Size -->

<cursor>
<file>[:@media:]common/cursor/cursor_refl[:#cursor.refl:].950.100.5.3.[:#cursor.color:].[:#cursor.shiny:].swf</file>
<above>true</above>
<animate>true</animate>
<posx>1</posx>
<posy>0</posy>
<width>397</width>
<height>87</height>
<scroll>2</scroll>
</cursor>

<tile>

	<!-- Columns and Rows -->

<cols>2</cols>
<rows>7</rows>
<width>399</width>
<height>84</height>

	<!-- Thumbnail -->

<image>
<name>banner</name>
<file>[:@jukebox:][:banner:]</file>
<posx>6</posx>
<posy>6</posy>
<width>387</width>
<height>75</height>
</image>			

</tile>

	<!-- Remote -->

<remote>
<button>PLAY</button>
<action>PLAYALL</action>
</remote>

<remote>
<button>BACK</button>
<action>BACK</action>
<data>1</data>
</remote>

<remote>
<button>EQUAL</button>
<action>EXTRA</action>	
<file>movie.1.info.list.wall</file>
</remote>		

<remote>
<button>INFO</button>
<action>EXTRA</action>	
<file>movie.1.info.list.wall</file>
</remote>		

</segment>	

	<!-- Remote -->

<remote>
<button>PLAY</button>
