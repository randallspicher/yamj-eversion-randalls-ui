<?xml version="1.0" encoding="UTF-8"?>

<eskin>

<control>
<fullscreen>false</fullscreen>
</control>

	<!-- Title / Year, ie. AVATAR (2011) -->

<text>
<name>title.year</name>
<display>[:fulltitle:] ([:year:])</display>
<posx>310</posx>
<posy>120</posy>
<width>660</width>
<height>40</height>
<align>left</align>
<size>24</size>  
<bold>true</bold>
<color>tvii.2.title.color</color>
</text>	

	<!-- Certification / Runtime / Genres, ie. Rated (PG-13) / Runtime (1hr 46m) / Action -->

<text>
<name>cert.runtime.genres</name>
<display>[:%rated:] ([:certification:]) / [:%runtime:] ([:runtime:]) / [:genres,3:]</display>
<posx>310</posx>
<posy>150</posy>
<width>660</width>
<height>25</height>
<align>left</align>
<size>20</size>  
<bold>true</bold>
<color>tvii.2.runtime.genres.color</color>
</text>	

	<!-- Director Label -->

<text>
<name>director.label</name>
<display>[:%directors:]:</display>
<posx>310</posx>
<posy>180</posy>
<width>125</width>
<height>25</height>
<align>left</align>
<size>18</size>  
<bold>true</bold>
<color>tvii.2.director.label.color</color>
</text>

	<!-- Director -->

<text>
<name>director</name>
<display>[:directors,3,blank:]</display>
<posx>310</posx>
<posy>205</posy>
<width>660</width>
<height>25</height>
<align>left</align>
<size>18</size>  
<bold>true</bold>
<color>tvii.2.director.color</color>
</text>

	<!-- Actor Label -->

<text>
<name>actor.label</name>
<display>[:%actors:]:</display>
<posx>310</posx>
<posy>235</posy>
<width>130</width>
<height>25</height>
<align>left</align>
<size>18</size>  
<bold>true</bold>
<color>tvii.2.actor.label.color</color>
</text>

	<!-- Actor -->

<text>
<name>actor</name>
<display>[:actors,8,blank:]</display>
<posx>310</posx>
<posy>260</posy>
<width>660</width>
<height>75</height>
<wordwrap>true</wordwrap>
<align>left</align>
<size>18</size>  
<bold>true</bold>
<color>tvii.2.actor.color</color>
</text>			

	<!-- Plot Label -->

<text>
<name>plot.label</name>
<display>[:%plot:]:</display>
<posx>310</posx>
<posy>310</posy>
<width>125</width>
<height>25</height>
<align>left</align>
<size>23</size>  
<bold>true</bold>
<color>tvii.2.plot.label.color</color>
</text>

	<!-- Plot -->

<text>
<name>plot</name>
<display>[:plot,blank:]</display>
<posx>310</posx>
<posy>335</posy>
<width>660</width>
<height>260</height>
<wordwrap>true</wordwrap>
<align>left</align>
<size>20</size>  
<bold>true</bold>
<color>tvii.2.plot.color</color>
</text>	

	<!-- Remote -->

<remote>
<button>PLAY</button>
<action>PLAYALL</action>
</remote>

<remote>
<button>BACK</button>
<action>BACK</action>
<data>2</data>
</remote>	

<remote>
<button>INFO</button>
<action>BACK</action>	
<data>2</data>
</remote>		

<remote>
<button>MENU</button>
<action>SCREEN</action>
<file>menu.1.outline</file>
</remote>

<remote>
<button>SEARCH</button>
<action>SCREEN</action>
<file>menu.1.outline</file>
</remote>

<remote>
<button>RED</button>
<action>HOME</action>
</remote>

<remote>
<button>REPEAT</button>
<action>RESET</action>
<title>[:%reset:]</title>
</remote>

<remote>
<button>ALL</button>
<action>BLOCK</action>
</remote>

</eskin>
