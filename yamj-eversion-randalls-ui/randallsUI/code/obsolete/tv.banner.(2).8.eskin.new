<segment>

	<!-- Thumbnails Start Location -->

<name>index</name>
<hyperscroll>false</hyperscroll>
<startx>443</startx>
<starty>40</starty>
<endx>1260</endx>
<endy>490</endy>
<scroll>2</scroll>

	<!-- Cursor Size -->

<cursor>
<file>[:@media:]common/cursor/cursor_refl[:#cursor.refl:].950.100.5.3.[:#cursor.color:].[:#cursor.shiny:].swf</file>
<above>true</above>
<animate>true</animate>
<posx>1</posx>
<posy>0</posy>
<width>397</width>
<height>97</height>
<scroll>2</scroll>
</cursor>

<tile>

	<!-- Columns and Rows -->

<cols>2</cols>
<rows>4</rows>
<width>399</width>
<height>99</height>

	<!-- Thumbnails -->

<image>
<name>banner</name>
<file>[:@jukebox:][:banner:]</file>
<posx>6</posx>
<posy>6</posy>
<width>387</width>
<height>85</height>
</image>			

</tile>

</segment>

	<!-- Title / Year, ie. AVATAR (2011) -->

<text>
<name>title.year</name>
<segname>index</segname>
<hyper>3</hyper>
<display>[:fulltitle:] ([:year:])</display>
<posx>400</posx>
<posy>480</posy>
<width>550</width>
<height>40</height>
<align>left</align>
<size>24</size>  
<bold>true</bold>
<color>tvb.2.title.year.color</color>
</text>	

	<!-- Certification / Runtime / Genres, ie. Rated (PG-13) / Runtime (1hr 46m) / Action -->

<text>
<name>cert.runtime.genres</name>
<segname>index</segname>
