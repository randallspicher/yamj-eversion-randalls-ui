<image>
<name>outline.bar</name>
<file>[:@media:]common/tv.banner.(3).4.cast.outline1.png</file>
<posx>13</posx>
<posy>461</posy>
<width>1254</width>
<height>210</height>
</image>
-->
	<!-- Actor Unknown 1 -->
<segment>

	<!-- Text Start Location -->

<name>peoplelist</name>
<hyperscroll>false</hyperscroll>
<datasource>people</datasource>
<startx>5</startx>
<starty>5</starty>
<scroll>2</scroll>

	<!-- Cursor Size -->

<cursor>
<file>[:@media:]common/cursor/cursor_refl[:#cursor.refl:].950.950.20.20.[:#cursor.color:].[:#cursor.shiny:].swf</file>
<above>true</above>
<animate>true</animate>
<posx>-1</posx>
<posy>0</posy>
<width>210</width>
<height>340</height>
<scroll>2</scroll>
</cursor>

<tile>

	<!-- Columns and Rows -->

<cols>6</cols>
<rows>2</rows>
<width>210</width>
<height>340</height>

	<!-- Video Image Outline 1 -->

<image>
<name>videoimagebg</name>
<file>[:@media:]common/tv.banner.(3).3.outline.episodes.outline1.png</file>
<posx>0</posx>
<posy>0</posy>
<width>210</width>
<height>341</height>
</image>

	<!-- Video Image - Unknown -->
<!--
<image>
<name>person.image.unknown</name>
<file>[:@media:]common/tv.banner.(3).3.outline.episodes.unknown.png</file>
<posx>5</posx>
<posy>5</posy>
<width>185</width>
<height>276</height>
</image>
-->
	<!-- Video Image -->

<image>
<name>person.image</name>
<file>[:@jukebox:]People/[:person@name:].jpg</file>
<posx>5</posx>
<posy>5</posy>
<width>185</width>
<height>275</height>
</image>


<image>
<name>person.image</name>
<file>[:@jukebox:]People/[:id:]/[:person@name:].jpg</file>
<posx>5</posx>
<posy>5</posy>
<width>185</width>
<height>275</height>
</image>


<image>
<name>person.image</name>
<file>[:@jukebox:]People/[:person@url:]</file>
<posx>5</posx>
<posy>5</posy>
<width>185</width>
<height>275</height>
</image>




	<!-- Video Image Title -->

<text>
<name>person.character</name>
<display>[:person@character,blank:]</display>
<posx>0</posx>
<posy>280</posy>
<width>180</width>
<height>20</height>
<size>18</size>
<align>center</align>
<bold>true</bold>
<wordwrap>false</wordwrap>
<hlcolor>tvb3.3.ep.title.label.hlcolor</hlcolor>
<color>tvb3.3.ep.title.label.hlcolor</color>
</text>	


<if>
<condition>[:person@character,upper:] = UNKNOWN</condition>
<text>
<name>person.job</name>
<display>[:person@job,upper,blank:]</display>
<posx>0</posx>
<posy>280</posy>
<width>180</width>
<height>20</height>
<size>18</size>
<align>center</align>
<bold>true</bold>
<wordwrap>false</wordwrap>
<hlcolor>tvb3.3.ep.title.label.hlcolor</hlcolor>
<color>tvb3.3.ep.title.label.hlcolor</color>
</text>	
</if>

<text>
<name>person.title</name>
<display>[:person@name,blank:]</display>
<posx>0</posx>
<posy>300</posy>
<width>180</width>
<height>20</height>
<size>18</size>
<align>center</align>
<bold>true</bold>
<wordwrap>false</wordwrap>
<color>tvb3.3.ep.title.label.color</color>
<hlcolor>tvb3.3.ep.title.label.color</hlcolor>
</text>	

<remote>
<button>SELECT</button>
<action>INDEX</action>	
<file>[:@jukebox:][:person@index,unescape:]</file>
</remote>	

</tile>


</segment>	


<!--<include>tv.banner.(3).bottom.menu.include</include>-->


<remote>
<button>PLAY</button>
<action>PLAYFROMHERE</action>	
</remote>		

<remote>
<button>PAUSE</button>
<action>PLAYRANDOM</action>	
</remote>		

<!--
<remote>
<button>SELECT</button>
<action>PLAYSINGLE</action>	
</remote>	
-->
<remote>
<button>FASTFORWARD</button>
<action>PLAYLAST</action>	
</remote>		


<remote>
<button>BACK</button>
<action>BACK</action>
<data>index</data>
</remote>


<remote>
<button>RED</button>
<action>EXTRA</action>	
<file>tv.banner.(3).1.outline.full</file>
</remote>

<remote>
<button>GREEN</button>
<action>EXTRA</action>	
<file>tv.banner.(3).4.cast</file>
</remote>

<remote>
<button>YELLOW</button>
<action>EXTRA</action>	
<file>tv.banner.(3).5.fanart</file>
</remote>

<remote>
<button>MENU</button>
<action>SCREEN</action>
<file>menu.1.outline</file>
</remote>

<remote>
<button>SEARCH</button>
<action>SCREEN</action>
<file>menu.1.outline</file>
</remote>

<remote>
<button>REPEAT</button>
<action>RESET</action>
<title>[:%reset:]</title>
</remote>


<remote>
<button>NUMPAD</button>
<action>PLAYPART</action>
</remote>


<remote>
<button>EQUAL</button>
<action>EXTRA</action>	
<file>tv.1.info.list.wall</file>
</remote>		


<remote>
<button>INFO</button>
<action>EXTRA</action>	
<file>tv.1.info.list.wall</file>
</remote>		

<remote>
<button>ALL</button>
<action>BLOCK</action>
</remote>

